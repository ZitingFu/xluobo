<view class="container log-list">
	<view id="UserName">
   		<view class="UserName-top clearFix" bindtap="UserNameTop">
			<span class="f-left">头像</span>
			<span class="f-right clearFix UserName-right">
				<image class="f-left" src="{{infoItem.avatar.b}}"></image>
				<i class="rightimg f-left"></i>
			</span>
   		</view>
   		<view class="UserName_conter">
			<ul class="clearFix">
				<li bindtap="UserName">
					<i class="f-left">用户名</i>
					<i class="f-right clearFix UserName-right">
						<i class="f-left">{{infoItem.name}}</i>
						<i class="rightimg f-left"></i>
					</i>
				</li>
				<li bindtap="sax">
					<i class="f-left">性别</i>
					<i class="f-right clearFix UserName-right">
						<i class="f-left" wx:if="{{infoItem.sex == 0}}">男</i>
						<i class="f-left" wx:if="{{infoItem.sex == 1}}">女</i>
						<i class="rightimg f-left"></i>
					</i>
				</li>
			 	<picker class="weui-btn brbote7" mode="date" value="{{date}}" start="" end="" bindchange="bindDateChange">
				<li class="">
					<i class="f-left" >出生日期</i>
					<i class="f-right clearFix UserName-right">
						<i class="f-left">{{infoItem.birthday}}</i>
						<i class="rightimg f-left"></i>
					</i>
				</li>
    			</picker>
				<li bindtap="phone">
					<i class="f-left">修改手机号</i>
					<i class="f-right clearFix UserName-right">
						<i class="f-left">{{infoItem.phone}}</i>
						<i class="rightimg f-left"></i>
					</i>
				</li>
			</ul>
   		</view>	
	</view>
</view>
