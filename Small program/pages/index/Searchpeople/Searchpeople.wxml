<!--logs.wxml-->
<view class="container log-list">
	<view class=""></view>
	<view id="peoplelist">
		<!-- 机构类型 -->
		<view class="organ_Type" wx:if="{{boolean}}">
			<li bindtap="Type_top" class="{{currentTab == index ?'active3':'active'}}"  data-type_id="{{item.id}}" data-currenttab="{{index}}"  wx:for="{{TypeItem}}" wx:for-index="index"  wx:key="index">{{item.name}}</li>
		</view>
		<view class="organ_Type_number" wx:if="{{boolean3}}" >
			<li bindtap="Type_top_number" data-currenttab2="{{index}}" data-number="{{item.id}}" class="{{currentTab2 == index ?'active3':'active'}}" wx:for="{{TypeItem3}}" wx:for-index="index"  wx:key="index">{{item.name}}</li>
		</view>
		<view class="Release-top height45 brbott-boe7e7e7 brbott-tae7e7e7">
			<view class="box">
				<view class="column">
					<view class="item" bindtap="open3" data-open="2">
			      		<select name="排序" id="">
				    		<option value="">物品类型<i class="{{open_num==2?'sjs':'sjx'}}"></i></option>
				    	</select>
			      	</view>
			     	<view class="item" data-open="1" bindtap="open1">
						<select name="区域" id="" >
							<view class="section">
							  <picker
							    mode="multiSelector"
							    bindchange="bindMultiPickerChange"
							    bindcolumnchange="bindMultiPickerColumnChange"
							    value="{{multiIndex}}"
							    range="{{multiArray}}"
							  >
							    <view class="picker">
							      <option value="">区域<i class="{{open_num==1?'sjs':'sjx'}}"></i></option>
							    </view>
							  </picker>
							</view>
				    	</select>
			     	</view>
			      	 <view class="item" bindtap="open" data-open="0">
				    	<select name="机构类型" id="">
				    		<option value="">场所<i class="{{open_num==0?'sjs':'sjx'}}"></i></option>	
				    	</select>
					</view>
			    </view>
	   		 </view>
   		 </view>
   		<view class="Release-center {{activeIndex == 1 ? 'notime' : ''}}" >
   		 	<view class="nearby clearFix">
				<view class="nearby-center clearFix">
					<view class="nearby-item clearFix paddTa20">
						<view class="list_item brbott-boe7e7e7" wx:for="{{listItem}}"  wx:key="index" x:for-index="idx2" bindtap="ckdetails" data-usid="{{item.id}}">
							<view class="nearby-top">
								<view class="clearFix genre_name_top">
									<view class="f-left f333 fontSize30 genre_name"><image class="jing" src="{{jing}}" alt=""></image>{{item.gen_name}}</view>
									<text class="f-right f999">1天</text>
								</view>
								<text class="clearFix" style="width: 100%;">{{item.content}}</text>
								<view class="list-imgbox">
									<!-- 图片为6张 -->
									<view class="SixImg clearFix">
										<!-- 图片6张 -->
										<view bindtap="imgtop" class="SixImg-img" wx:if="{{item.images.length != 0}}" wx:for="{{item.images}}" data-list="{{item.images}}" data-index='{{index}}'  wx:key="index" wx:for-item="iteming">
									    	<image src="{{iteming.s}}" alt=""></image>
									    </view>
									    <!-- 图片1张 -->
									   <!-- <view class="SixImg-img" wx:for="{{item.images}}" style="width:100%;height:500rpx;" wx:key="index" wx:for-item="iteming">
									    	<image  src="{{iteming.s}}" alt=""></image>
									    </view> -->
									    <!-- video -->
									    <!-- <video objectFit="fill" wx:if="{{item.video}}" style="margin-top:13px;" src="{{item.video}}"></video> -->
								    </view>
								    <!-- 图片为一张 -->
								   <!--  <view class="SixImg clearFix">
									    <view class="OneImg-img">
									    	<image src="{{one1}}" alt=""></image>
									    </view>
								    </view> -->
				   			 	</view>
				   			 	<view class="nearby-bottom paddBo13 paddTa13 clearFix">
				   			 		<view class="clearFix height40">
										<view class="f-left f333 fontSize30 wi70 hidden">
											<view  class="wihe20 f-left paddRi14" style="top:7px;">
												<image wx:if="{{item.avatar.length != 0}}" src="{{item.avatar.s}}" alt=""></image>
											 	<image wx:else src="{{loge}}"></image>
											</view>
											<view class="f-left hidden wi70" style="line-height: 40px">{{item.user_name}}</view>
										</view>
										<view class="f-right wi23 f999 clearFix">
											<view class="wihe20 f-left paddRi9 "><image class="xinxi" src="{{xinxi}}" alt=""></image></view>
											<view class="f-left length">{{item.comment_count}}</view>
											<view class="f-right fenxi"><image src="{{fexi}}" alt=""></image></view>
										</view>
									</view>
				   			 	</view>
							</view>
						</view>
					</view>
				</view>
			</view>
   		</view>
   		<!-- 弹出框 -->
   		<view class="Popup" bindtap="open" wx:if="{{boolean}}"></view>
   		<view class="Popup" bindtap="open3" wx:if="{{boolean3}}"></view>
		<!--三级联动 -->
	</view>
</view>
