<!--index.wxml-->
<view class="container">
	<view></view>
	<view id="search">
	    <scroll-view scroll-x="true" class="nav brbott-boe7e7e7 brbott-tae7e7e7" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
	        <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
	            <view class="nav-item"  data-current="{{idx}}" bindtap="switchNav">
	            <span class="{{currentTab == idx ?'active':'active2'}}">{{navItem.text}}</span>
	        </view>
	        </block>        
	    </scroll-view>
	   <!-- 页面内容 -->
	    <swiper class="tab-box" current="{{currentTab}}" duration="300" bindchange="switchTab">
	        <swiper-item wx:for="{{[0,1,2,3,4,5,6,7,8]}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="idx" class="tab-content">
	            {{tabItem}}
	        </swiper-item>
	    </swiper>
    </view>
</view>